generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum UserType {
  COMPANY
  JOBSEEKER
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime? @map("email_verified")
  image              String?
  password           String?
  role               UserRole  @default(USER)
  onboardingComplete Boolean   @default(false)
  accounts           Account[]
  userType           UserType?

  company   Company?
  jobSeeker JobSeeker?

  savedJobPost SavedJobPost[]

  @@map("users")
}

model Company {
  id       String  @id @default(uuid())
  name     String
  location String?
  about    String
  logo     String
  website  String

  jobPost JobPost[]

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model JobSeeker {
  id     String @id @default(uuid())
  name   String
  about  String
  resume String

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  jobApplication JobApplication[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("job_seekers")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model VerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("verification_token")
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@unique([email, token])
  @@map("password_reset_token")
}

model JobPost {
  id              String   @id @default(uuid())
  jobTitle        String
  employmentType  String
  location        String
  sallaryFrom     Int?
  sallaryTo       Int?
  jobDescription  String
  listingDuration Int
  benefits        String[]

  status JobPostStatus @default(DRAFT)

  companyId      String?
  company        Company?         @relation(fields: [companyId], references: [id])
  jobApplication JobApplication[]

  savedJobPost SavedJobPost[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("job_posts")
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  ACCEPTED
  REJECTED
}

model JobApplication {
  id          String            @id @default(uuid())
  coverLetter String?
  resume      String
  status      ApplicationStatus @default(PENDING)

  jobSeekerId String
  jobSeeker   JobSeeker @relation(fields: [jobSeekerId], references: [id], onDelete: Cascade)

  jobPostId String
  jobPost   JobPost @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  updatedStatusAt DateTime?

  @@unique([jobSeekerId, jobPostId])
  @@map("job_applications")
}

enum JobPostStatus {
  DRAFT
  ACTIVE
  EXPIRED
}

model SavedJobPost {
  id        String  @id @default(uuid())
  jobPost   JobPost @relation(fields: [jobPostId], references: [id])
  jobPostId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, jobPostId])
  @@map("saved_job_post")
}
